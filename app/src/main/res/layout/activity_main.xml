<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/player_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_one"
        android:textSize="20sp"
        android:layout_weight="1"
        android:gravity="start"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"/>

        <TextView
            android:id="@+id/player_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_two"
            android:layout_weight="1"
            android:gravity="end"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/score_of_player_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Zero_score"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_marginStart="45dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/score_of_player_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Zero_score"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginEnd="25dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/winning_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/player_one_is_winning"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:textColor="#CA2B2B"
        android:fontFamily="sans-serif-black"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

    <Button
        android:id="@+id/btn_one"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text=""
        android:textSize="60sp"
        android:onClick="buttonClicked"
        android:textStyle="bold"
        android:backgroundTint="#6C9E52"/>
        <Button
            android:id="@+id/btn_two"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:onClick="buttonClicked"
            android:textSize="60sp"
            android:textStyle="bold"
            android:backgroundTint="#6C9E52"/>
        <Button
            android:id="@+id/btn_three"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:textSize="60sp"
            android:onClick="buttonClicked"
            android:textStyle="bold"
            android:backgroundTint="#6C9E52"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <Button
            android:id="@+id/btn_four"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:onClick="buttonClicked"
            android:textSize="60sp"
            android:textStyle="bold"
            android:backgroundTint="#6C9E52"/>
        <Button
            android:id="@+id/btn_five"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:textSize="60sp"
            android:textStyle="bold"
            android:onClick="buttonClicked"
            android:backgroundTint="#6C9E52"/>
        <Button
            android:id="@+id/btn_six"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:textSize="60sp"
            android:textStyle="bold"
            android:onClick="buttonClicked"
            android:backgroundTint="#6C9E52"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <Button
            android:id="@+id/btn_seven"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:textSize="60sp"
            android:textStyle="bold"
            android:onClick="buttonClicked"
            android:backgroundTint="#6C9E52"/>
        <Button
            android:id="@+id/btn_eight"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:onClick="buttonClicked"
            android:textSize="60sp"
            android:textStyle="bold"
            android:backgroundTint="#6C9E52"/>
        <Button
            android:id="@+id/btn_nine"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:onClick="buttonClicked"
            android:textSize="60sp"
            android:textStyle="bold"
            android:backgroundTint="#6C9E52"
            tools:ignore="ButtonStyle,OnClick" />

    </LinearLayout>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_game"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:backgroundTint="#E1C2C2"/>

</LinearLayout>